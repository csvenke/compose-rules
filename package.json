{
  "name": "@csvenke/compose-rules",
  "description": "Simple helper functions for writing composable business rules",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Christian Svenkerud",
  "keywords": [
    "library",
    "compose",
    "helpers",
    "javascript",
    "typescript",
    "functional-programming"
  ],
  "repository": {
    "url": "https://github.com/csvenke/compose-rules"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "test": "ava",
    "test-ci": "yarn check-all && yarn test",
    "pretest": "yarn build",
    "prettier": "prettier --write .",
    "check-prettier": "prettier --check .",
    "check-types": "tsc",
    "check-all": "yarn check-prettier && yarn check-types",
    "docs": "rm -rf docs && typedoc --tsconfig tsconfig.json"
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@babel/preset-typescript": "7.9.0",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@csvenke/prettier-config": "3.0.0",
    "@types/node": "13.11.1",
    "ava": "3.7.0",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4",
    "rollup": "2.6.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "0.27.0",
    "typedoc": "0.17.0-3",
    "typescript": "3.8.3"
  },
  "prettier": "@csvenke/prettier-config",
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.test.ts"
    ],
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ],
      "extensions": [
        "ts"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yml,md}": [
      "prettier --write"
    ]
  }
}
